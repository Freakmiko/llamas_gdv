extends layout

block styles
	link(href='/stylesheets/home.css', rel='stylesheet')
	
block scripts
	script(src="/javascripts/home_menu.js")
	
block content
	div#container
		div#infobox
			h1#title Präsidentschaftswahlen
			div#infotext In dieser Webseite werden die Zugriffe auf verschiedene Wikipedia-Seiten zu vier verschiedenen Präsidentschaftswahlen analysiert und visualisiert. Fahren Sie mit der Maus über eine der nebenstehenden Länder um weiterführende Informationen zu der Wahl des jeweiligen Landes angezeigt zu bekommen. Wählen Sie ein Land aus, um zu der Detail-Seite der Präsidentschaftswahl dieses Landes zu gelangen. Alternativ können Sie auch die Zugriffszahlen verschiedenen Sprachversionen zu einer Wahl direkt miteinander vergleichen.
		div#selectionbox
			div#franceBox(onmouseover="setFranceInfotext()" onclick="window.open('http://localhost:3000/france','_self')")
				img#franceImg(src="/images/france.svg")
				a.countryName Frankreich
			div#austriaBox(onmouseover="setAustriaInfotext()" onclick="window.open('http://localhost:3000/austria','_self')")
				img#austriaImg(src="/images/austria.svg")
				a.countryName Österreich
			div#usaBox(onmouseover="setUSAInfotext()" onclick="window.open('http://localhost:3000/usa','_self')")
				img#usaImg(src="/images/usa.svg")
				a.countryName USA
			div#southKoreaBox(onmouseover="setSouthKoreaInfotext()" onclick="window.open('http://localhost:3000/southKorea','_self')")
				img#southKoreaImg(src="/images/southKorea.svg")
				a.countryName Südkorea
			div#allBox(onmouseover="setAllInfotext()" onclick="window.open('http://localhost:3000/all','_self')")
				img#allImg(src="/images/all.svg")
				a.countryName Vergleich			
