extends layout

block scripts
	script(src="/javascripts/selection_page.js")

block content
	div#sidebarInfoContainer
		img#candidateInfoImage
		h1#candidateName
		div#candidateInfoText
	div.header
		div.headerHoverContainer#headerCountrySelection
			div.headerMenuContent.headerItem(onclick="back()") Länderauswahl
		div.headerHoverContainer#headerCountry
			block countryImage	
			block countryName					
		div.headerHoverContainer#headerCandidates
			div.headerMenuContent.headerItem(onclick="showCandidateInformation(\'CLINTON\')") 5 Kandidaten
		div.headerHoverContainer#headerElectionPhases
			block electionPhases			
		div.headerHoverContainer#headerComparison
			img#headerComparisonImage(src="/images/cross.svg")
			div.headerMenuContent.headerItem Ländervergleich
		div.headerHoverContainer#headerSettings
			div.headerMenuContent.headerItem Wikipedia-Sprache
			img#headerSettingsImage(src="/images/settings.svg")
	
	div.contentArea(onclick="hideCandidateInformation()")
		block graph
		block results
	script(src="/javascripts/linegraph_korean_election.js")
